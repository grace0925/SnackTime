<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark"
    >

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/snack_time"/>

    <TextView
        android:id="@+id/app_slogan_user_login"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo"
        android:text="Snack happily ever after"
        android:layout_marginLeft="100dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        />

    <Button
        android:id="@+id/main_user_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_slogan_user_login"
        android:layout_marginTop="45sp"
        android:text="im a user"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="16sp"
        android:drawableLeft="@drawable/main_user"
        />

    <Button
        android:id="@+id/main_store_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_user_login"
        android:layout_marginTop="15dp"
        android:text="im a restaurant"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="16sp"
        android:drawableLeft="@drawable/main_store"
        />

    <Button
        android:id="@+id/main_admin_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/main_store_login"
        android:layout_marginTop="15dp"
        android:text="im an admin"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="16sp"
        android:drawableLeft="@drawable/main_admin"
        />



</RelativeLayout>