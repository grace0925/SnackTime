<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:background="@android:color/white">

    <View android:id="@+id/dark_rect_top_signup"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@color/colorPrimaryDark"/>

    <ImageView android:id="@+id/app_logo_signup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/snack_time"/>

    <TextView
        android:id="@+id/title_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dark_rect_top_signup"
        android:layout_marginTop="20dp"
        android:layout_marginLeft= "30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="Signup"/>

    <EditText android:id="@+id/username_edit"
        android:inputType="text"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:textSize="25dp"
        android:layout_below="@+id/app_logo_signup"
        android:hint="Username"
        android:gravity="center_horizontal"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/darkGrey"
        android:textColorHint="@color/lightGrey"
        />

    <LinearLayout
        android:id="@+id/fullname_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_edit"
        android:layout_marginLeft="45dp">

        <EditText android:id="@+id/firstname_edit"
        android:inputType="textPersonName"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:ems="12"
        android:textSize="25dp"
        android:hint="First Name"
            android:gravity="center_horizontal"
            android:textColor="@color/darkGrey"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColorHint="@color/lightGrey"
        />

        <EditText android:id="@+id/lastname_edit"
            android:inputType="textPersonName"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:ems="12"
            android:textSize="25dp"
            android:hint="Last Name"
            android:gravity="center_horizontal"
            android:textColor="@color/darkGrey"
            android:backgroundTint="@color/colorPrimaryDark"
            android:textColorHint="@color/lightGrey"
            />

    </LinearLayout>

    <EditText android:id="@+id/email_signup"
        android:inputType="textEmailAddress"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:textSize="25dp"
        android:layout_below="@+id/fullname_signup"
        android:hint="Email Address"
        android:gravity="center_horizontal"
        android:textColor="@color/darkGrey"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColorHint="@color/lightGrey"
        />

    <EditText android:id="@+id/password_signup"
        android:inputType="textPassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:textSize="25dp"
        android:layout_below="@+id/email_signup"
        android:hint="Password"
        android:gravity="center_horizontal"
        android:textColor="@color/darkGrey"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColorHint="@color/lightGrey"
        />

    <EditText android:id="@+id/confirm_password_signup"
        android:inputType="textPassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:ems="12"
        android:textSize="25dp"
        android:layout_below="@+id/password_signup"
        android:hint="Confirm Password"
        android:textColor="@color/darkGrey"
        android:gravity="center_horizontal"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColorHint="@color/lightGrey"
        />

    <View android:id="@+id/dark_rect_bot_signup"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/confirm_password_signup"
        android:background="@color/colorPrimaryDark"/>

    <Button android:id="@+id/signup"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_below="@+id/confirm_password_signup"
        android:layout_marginTop="40dp"
        android:text="SIGNUP"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

</RelativeLayout>